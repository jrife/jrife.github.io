---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ColorScript from "../components/ColorScript.astro";
import Tags from "../components/Tags.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import getTags from "../scripts/getTags";

const posts = await getCollection("posts");
const tags = getTags(posts);
---

<!doctype html>
<html lang="en-us">
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<body>
		<Header title={SITE_TITLE} />
		<img width={720} height={360} src="/images/pages/about.jpeg"/>
		<main class="blog-post">
            Hi, I'm Jordan. I'm a software engineer. This is my blog where I
			talk about things that interest me. Oh, I also really like birds
			and tea.
		</main>
		<Footer />
	</body>
</html>
